<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A87BE5F3">

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A87BE5F3">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:textColor="@color/white"
            android:id="@+id/btn0"
            android:layout_margin="1dp"
            android:textSize="50dp"
            android:background="@drawable/rounhd">
        </Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2"
            android:id="@+id/btn1"
            android:textSize="50dp"
            android:layout_margin="1dp"
            android:textColor="@color/white"
            android:background="@drawable/rounhd">
        </Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="50dp"
            android:textColor="@color/white"
            android:id="@+id/btn2"
            android:layout_margin="1dp"
            android:background="@drawable/rounhd">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A87BE5F3">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="50dp"
            android:id="@+id/btn3"
            android:textColor="@color/white"
            android:layout_margin="1dp"
            android:background="@drawable/rounhd">
        </Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="50dp"
            android:id="@+id/btn4"
            android:textColor="@color/white"
            android:layout_margin="1dp"
            android:background="@drawable/rounhd">
        </Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="6"
            android:id="@+id/btn5"
            android:textSize="50dp"
            android:textColor="@color/white"
            android:layout_margin="1dp"
            android:background="@drawable/rounhd">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A87BE5F3">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7"
            android:textSize="50dp"
            android:id="@+id/btn6"
            android:textColor="@color/white"
            android:layout_margin="1dp"
            android:background="@drawable/rounhd">
        </Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="50dp"
            android:id="@+id/btn7"
            android:textColor="@color/white"
            android:layout_margin="1dp"
            android:background="@drawable/rounhd">
        </Button>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="50dp"
            android:text="8"
            android:id="@+id/btn8"
            android:textColor="@color/white"
            android:layout_margin="1dp"
            android:background="@drawable/rounhd">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A87BE5F3">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="submit"
            android:id="@+id/btn9"
            android:textSize="40dp"
            android:layout_margin="2dp"
            android:background="@drawable/rounhd">
        </Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="reset"
            android:id="@+id/btn10"
            android:textSize="40dp"
            android:layout_margin="2dp"
            android:background="@drawable/rounhd">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A87BE5F3">
    </LinearLayout>
</LinearLayout>